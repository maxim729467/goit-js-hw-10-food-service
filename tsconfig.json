{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "removeComments": true,
        "watch": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}